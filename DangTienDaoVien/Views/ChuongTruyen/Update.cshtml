@model DangTienDaoVien.Models.ChuongTruyen
@{
	ViewData["Title"] = "Sửa chương";
}

<div class="container mt-4">
	<div class="row my-2">
		<div class="col text-primary"><h2>Sửa chương</h2></div>
	</div>
	<form asp-action="Update" asp-controller="ChuongTruyen" method="post">
		<input asp-for="Id" value="@Model.Id" hidden/>
		<div class="form-group">
			<label for="STT">Số thứ tự</label>
			<input asp-for="@Model.STT" type="text" class="form-control" placeholder="Nhập STT" value="@Model.STT">
		</div>
		<div class="form-group">
			<label for="TenChuong">Tên chương</label>
			<input asp-for="@Model.TenChuong" type="text" class="form-control" placeholder="Nhập tên chương" value="@Model.TenChuong">
		</div>
        <div class="form-group">
			<label for="NoiDung">Nội dung</label>
			<textarea asp-for="@Model.NoiDung" class="form-control" rows="10" placeholder="Nhập nội dung chương">@Model.NoiDung</textarea>
        </div>
		<div class="form-group">
			<label for="TruyenId">Truyện Id</label>
			<input asp-for="@Model.TruyenId" type="text" class="form-control" placeholder="Nhập STT" value="@ViewBag.TruyenId" value="@Model.TruyenId">
		</div>
		<button type="submit" class="btn btn-primary"><h4>Thêm chương</h4></button>
	</form>
</div>
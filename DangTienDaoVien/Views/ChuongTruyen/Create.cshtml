@model DangTienDaoVien.Models.ChuongTruyen
@{
	ViewData["Title"] = "Thêm chương mới";
}

<div class="container mt-4">
	<div class="row my-2">
		<div class="col text-primary"><h2>Thêm chương mới</h2></div>
	</div>
	<form asp-action="Create" asp-controller="ChuongTruyen" method="post">
		<div class="form-group">
			<label for="STT">Số thứ tự</label>
			<input asp-for="@Model.STT" type="text" class="form-control" placeholder="Nhập STT">
			<span asp-validation-for="STT" class="text-danger"></span>
		</div>
		<div class="form-group">
			<label for="TenChuong">Tên chương</label>
			<input asp-for="@Model.TenChuong" type="text" class="form-control" placeholder="Nhập tên chương">
			<span asp-validation-for="TenChuong" class="text-danger"></span>
		</div>
		<div class="form-group">
			<label for="NoiDung">Nội dung</label>
			<textarea asp-for="@Model.NoiDung" class="form-control" rows="10" placeholder="Nhập nội dung chương"></textarea>
			<span asp-validation-for="NoiDung" class="text-danger"></span>
		</div>
		<div class="form-group">
			<label for="TruyenId">Truyện Id</label>
			<input asp-for="@Model.TruyenId" type="text" class="form-control" placeholder="Nhập STT" value="@ViewBag.TruyenId">
			<span asp-validation-for="TruyenId" class="text-danger"></span>
		</div>
		<button type="submit" class="btn btn-primary"><h4>Thêm chương</h4></button>
	</form>
</div>

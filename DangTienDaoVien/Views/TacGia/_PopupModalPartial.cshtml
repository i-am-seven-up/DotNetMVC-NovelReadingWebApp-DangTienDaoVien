    @{
        Layout = null; 
    }
    @*popup xác nhận xoá*@
    <div class="modal fade" id="popupModal" tabindex="-1" role="dialog" aria-labelledby="popupModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="popupModalLabel">Xác nhận xoá</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <h3 class="alert-danger">Bạn có chắc chắn muốn xoá Tác giả này? Các truyện liên quan sẽ bị xoá!</h3>
                    <hr />
                    <h4>Thông tin tác giả</h4>
                    <p>ID: @ViewBag.TacGiaId</p>
                    <p>Ten: @ViewBag.TacGiaTen</p>
                    <p>Mo Ta: @ViewBag.TacGiaMoTa</p>
                </div>
                <div class="modal-footer d-flex justify-content-between">
                    <form asp-action="Delete" asp-controller="TacGia" asp-route-id="@ViewBag.TacGiaId" method="post">
                        <button type="submit" class="btn btn-danger">Xoá</button>
                    </form>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
                </div>
            </div>
        </div>
    </div>
